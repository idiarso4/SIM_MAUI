<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SKANSAPUNG.MAUI.Views.NotificationsPage"
             xmlns:viewmodel="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             xmlns:model="clr-namespace:SKANSAPUNG.MAUI.Models"
             x:DataType="viewmodel:NotificationsViewModel"
             Title="{Binding Title}">
    <ListView ItemsSource="{Binding Notifications}"
              HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:LocalNotification">
                <ViewCell>
                    <Frame Padding="10" Margin="10,5" CornerRadius="5" BorderColor="{StaticResource Gray200}">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Body}" />
                            <Label Text="{Binding ReceivedAt, StringFormat='{0:g}'}" FontSize="Small" TextColor="{StaticResource Gray500}" HorizontalOptions="End" />
                        </VerticalStackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage> 
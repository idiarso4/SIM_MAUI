<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             xmlns:models="clr-namespace:SKANSAPUNG.MAUI.Models"
             x:Class="SKANSAPUNG.MAUI.Views.GradesDetailPage"
             Title="{Binding Title}"
             x:DataType="viewModels:GradesDetailViewModel">
    <Grid RowDefinitions="Auto, *">
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Grid.RowSpan="2" />

        <VerticalStackLayout Padding="20" Spacing="10" Grid.Row="0">
            <Label Text="{Binding StudentName}" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center" />
            <Label Text="{Binding SubjectName}" FontSize="Subtitle" HorizontalOptions="Center" />
        </VerticalStackLayout>

        <CollectionView ItemsSource="{Binding GradeRecords}" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:GradeRecord">
                    <Frame Padding="15" Margin="10,5" CornerRadius="10" HasShadow="True">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding AssessmentName}" FontSize="Medium" FontAttributes="Bold" />
                                <Label Text="{Binding AssessmentType}" FontSize="Small" TextColor="Gray" />
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text="{Binding Score, StringFormat='{0:F2}'}" FontSize="Large" FontAttributes="Bold" VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="Tidak ada data nilai untuk ditampilkan." HorizontalOptions="Center" VerticalOptions="Center" />
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>

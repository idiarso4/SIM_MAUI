<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SKANSAPUNG.MAUI.Views.MyGradesPage"
             Title="{Binding Title}"
             x:DataType="viewmodels:MyGradesViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding LoadMyGradesCommand}" />
    </ContentPage.Behaviors>

    <Grid>
        <CollectionView ItemsSource="{Binding MyGrades}"
                        EmptyView="Belum ada nilai yang dimasukkan.">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:MyGradesViewModel+DisplayGrade">
                    <Frame Padding="15" Margin="10,5" CornerRadius="8" BorderColor="LightGray">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Text="{Binding Subject}" FontAttributes="Bold" Grid.Column="0" />
                            <Label Text="{Binding Score}" FontSize="24" FontAttributes="Bold" Grid.Column="1" Grid.RowSpan="2" VerticalOptions="Center" />
                            <Label Text="{Binding AssessmentName}" Grid.Row="1" Grid.Column="0" />
                            <Label Text="{Binding Date, StringFormat='{0:d MMM yyyy}'}" Grid.Row="2" Grid.Column="0" FontSize="Micro" TextColor="Gray" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center" />
    </Grid>
</ContentPage> 
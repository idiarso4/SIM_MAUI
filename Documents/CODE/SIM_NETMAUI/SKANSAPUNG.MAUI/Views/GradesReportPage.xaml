<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             x:Class="SKANSAPUNG.MAUI.Views.GradesReportPage"
             Title="{Binding ReportTitle}"
             x:DataType="viewmodels:GradesReportViewModel">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadGradesReportCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *" Padding="10">
        <Label 
            Grid.Row="0"
            Text="{Binding ReportTitle}"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" 
            Margin="0,10,0,20"/>

        <CollectionView Grid.Row="1" ItemsSource="{Binding GradeRecords}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:StudentGradeRecordDto">
                    <Frame Padding="10" Margin="5" CornerRadius="5" BorderColor="{StaticResource Gray200}">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:GradesReportViewModel}}, Path=GoToDetailsAsync}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding StudentName}" FontAttributes="Bold" />
                                <Label Text="{Binding SubjectName}" FontSize="Small" />
                                <Label Text="{Binding AssessmentName}" FontSize="Small" TextColor="{StaticResource Gray500}" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center">
                                <Label Text="{Binding Score}" FontSize="Large" FontAttributes="Bold" />
                                <Label Text="{Binding Grade}" HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator 
            Grid.Row="1"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
    </Grid>
</ContentPage>

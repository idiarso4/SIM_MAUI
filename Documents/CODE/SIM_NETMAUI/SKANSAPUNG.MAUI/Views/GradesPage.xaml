<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             xmlns:model="clr-namespace:SKANSAPUNG.MAUI.Models"
             x:Class="SKANSAPUNG.MAUI.Views.GradesPage"
             Title="{Binding Title}"
             x:DataType="viewmodel:GradesViewModel">

    <StackLayout Padding="16">
        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" RowDefinitions="Auto, Auto, Auto, *">
            
            <Label Grid.Row="0" Grid.Column="0" Text="Pilih Kelas" VerticalOptions="Center"/>
            <Frame Grid.Row="1" Grid.Column="0" Style="{StaticResource PickerFrameStyle}">
                <Picker ItemsSource="{Binding ClassRooms}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedClassRoom}"
                        Title="Pilih Kelas"
                        IsEnabled="{Binding IsNotBusy}">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior
                            EventName="SelectedIndexChanged"
                            Command="{Binding ClassRoomSelectedCommand}" />
                    </Picker.Behaviors>
                </Picker>
            </Frame>
            
            <Label Grid.Row="0" Grid.Column="1" Text="Pilih Penilaian" VerticalOptions="Center"/>
            <Frame Grid.Row="1" Grid.Column="1" Style="{StaticResource PickerFrameStyle}">
                <Picker ItemsSource="{Binding Assessments}"
                        ItemDisplayBinding="{Binding Name}"
                        SelectedItem="{Binding SelectedAssessment}"
                        Title="Pilih Penilaian"
                        IsEnabled="{Binding IsNotBusy}">
                    <Picker.Behaviors>
                        <toolkit:EventToCommandBehavior
                            EventName="SelectedIndexChanged"
                            Command="{Binding AssessmentSelectedCommand}" />
                    </Picker.Behaviors>
                </Picker>
            </Frame>

            <ActivityIndicator Grid.Row="2" Grid.ColumnSpan="2" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,12"/>

            <CollectionView Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding StudentScores}" Margin="0,12,0,0">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                        <Label Text="Pilih kelas dan penilaian untuk melihat nilai." HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:StudentScoreDetailDto">
                        <Frame Padding="12" Margin="0,0,0,8" CornerRadius="8" BorderColor="{StaticResource Gray200}">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <Label Grid.Column="0" Text="{Binding StudentName}" VerticalOptions="Center"/>
                                <Label Grid.Column="1" Text="{Binding Score, StringFormat='{0:N0}'}" FontAttributes="Bold" VerticalOptions="Center" IsVisible="{Binding Score, Converter={StaticResource IsNotNullConverter}}"/>
                                <Label Grid.Column="2" Text="{Binding Status}" FontAttributes="Italic" TextColor="{StaticResource Gray500}" VerticalOptions="Center" IsVisible="{Binding Score, Converter={StaticResource IsNullConverter}}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </StackLayout>

</ContentPage> 
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SKANSAPUNG.MAUI.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             x:DataType="viewmodels:DashboardViewModel"
             Title="Dashboard"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Black}}">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding RefreshCommand}">
        
        <ScrollView>
            <Grid RowDefinitions="Auto,Auto,Auto,*" 
                  Padding="20"
                  RowSpacing="20">

                <!-- Header with Greeting -->
                <Frame Grid.Row="0"
                       BackgroundColor="{StaticResource Primary}"
                       CornerRadius="15"
                       Padding="20">
                    
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
                        <Label Grid.Row="0"
                               Text="{Binding Greeting}"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource White}"/>
                        
                        <Label Grid.Row="1"
                               Text="{Binding CurrentUser.Role, StringFormat='Role: {0}'}"
                               FontSize="14"
                               TextColor="{StaticResource White}"
                               Opacity="0.8"/>
                    </Grid>
                </Frame>

                <!-- Statistics Cards -->
                <Grid Grid.Row="1" 
                      ColumnDefinitions="*,*,*"
                      ColumnSpacing="10">
                    
                    <!-- Total Students -->
                    <Frame Grid.Column="0"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="10"
                           Padding="15">
                        
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding TotalStudents}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="Center"/>
                            
                            <Label Text="Students"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Total Teachers -->
                    <Frame Grid.Column="1"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="10"
                           Padding="15">
                        
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding TotalTeachers}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Secondary}"
                                   HorizontalOptions="Center"/>
                            
                            <Label Text="Teachers"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Today's Attendance -->
                    <Frame Grid.Column="2"
                           BackgroundColor="{StaticResource White}"
                           CornerRadius="10"
                           Padding="15">
                        
                        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label Text="{Binding TodayAttendance}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Success}"
                                   HorizontalOptions="Center"/>
                            
                            <Label Text="Attendance"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Quick Actions -->
                <Label Grid.Row="2"
                       Text="Quick Actions"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray800}"
                       Margin="0,10,0,0"/>

                <!-- Dashboard Items -->
                <CollectionView Grid.Row="3"
                                ItemsSource="{Binding DashboardItems}"
                                SelectionMode="Single">
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:DashboardItem">
                            <Frame Margin="0,5"
                                   BackgroundColor="{StaticResource White}"
                                   CornerRadius="10"
                                   Padding="15">
                                
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Icon -->
                                    <Image Grid.Column="0"
                                           Source="{Binding Icon, StringFormat='{0}.png'}"
                                           HeightRequest="40"
                                           WidthRequest="40"
                                           VerticalOptions="Center"/>
                                    
                                    <!-- Content -->
                                    <VerticalStackLayout Grid.Column="1"
                                                         Spacing="5"
                                                         Margin="15,0,0,0">
                                        
                                        <Label Text="{Binding Title}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray800}"/>
                                        
                                        <Label Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="{StaticResource Gray600}"/>
                                    </VerticalStackLayout>
                                    
                                    <!-- Arrow -->
                                    <Image Grid.Column="2"
                                           Source="arrow_right.png"
                                           HeightRequest="20"
                                           WidthRequest="20"
                                           VerticalOptions="Center"/>
                                </Grid>
                                
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DashboardViewModel}}, Path=NavigateToItemCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>
        </ScrollView>
    </RefreshView>

    <!-- Loading Overlay -->
    <Grid IsVisible="{Binding IsBusy}"
          BackgroundColor="{StaticResource Black}"
          Opacity="0.5">
        
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
    </Grid>

</ContentPage> 
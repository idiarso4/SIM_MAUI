<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SKANSAPUNG.MAUI.Views.AttendancePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             x:DataType="viewmodels:AttendanceViewModel"
             Title="Attendance"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray50}, Dark={StaticResource Black}}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Status Card -->
            <Frame BackgroundColor="{StaticResource White}"
                   CornerRadius="15"
                   Padding="20">
                
                <VerticalStackLayout Spacing="15">
                    <Label Text="Today's Status"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Gray800}"/>
                    
                    <Label Text="{Binding AttendanceStatus}"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalOptions="Center"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="Check In"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding CheckInTime, StringFormat='{0:hh\\:mm}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Success}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Check Out"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray600}"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding CheckOutTime, StringFormat='{0:hh\\:mm}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Warning}"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Location Status -->
            <Frame BackgroundColor="{StaticResource White}"
                   CornerRadius="15"
                   Padding="20">
                
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Location"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Gray800}"/>
                        
                        <Button Grid.Column="1"
                                Text="Refresh"
                                Command="{Binding RefreshLocationCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                FontSize="12"/>
                    </Grid>
                    
                    <Label Text="{Binding CurrentLocation}"
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="Check In"
                        Command="{Binding CheckInCommand}"
                        IsEnabled="{Binding IsCheckInEnabled}"
                        BackgroundColor="{StaticResource Success}"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>
                
                <Button Grid.Column="1"
                        Text="Check Out"
                        Command="{Binding CheckOutCommand}"
                        IsEnabled="{Binding IsCheckOutEnabled}"
                        BackgroundColor="{StaticResource Warning}"
                        TextColor="{StaticResource White}"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>

            <!-- Sync Button -->
            <Button Text="Sync Offline Data"
                    Command="{Binding SyncOfflineDataCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontSize="14"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="40"/>

            <!-- Date Selector -->
            <Frame BackgroundColor="{StaticResource White}"
                   CornerRadius="15"
                   Padding="20">
                
                <VerticalStackLayout Spacing="10">
                    <Label Text="Select Date"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Gray800}"/>
                    
                    <DatePicker Date="{Binding SelectedDate}"
                                Format="dd/MM/yyyy"
                                HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage> 
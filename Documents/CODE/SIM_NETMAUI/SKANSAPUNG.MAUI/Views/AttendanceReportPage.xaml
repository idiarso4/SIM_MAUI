<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:SKANSAPUNG.MAUI.ViewModels"
             xmlns:models="clr-namespace:SKANSAPUNG.MAUI.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SKANSAPUNG.MAUI.Views.AttendanceReportPage"
             Title="{Binding ReportTitle}"
             x:DataType="viewModels:AttendanceReportViewModel">
    <Grid RowDefinitions="Auto, *">
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" Grid.RowSpan="2" />

        <CollectionView ItemsSource="{Binding AttendanceRecords}"
                        SelectionMode="None"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:StudentAttendanceRecordDto">
                    <Frame Padding="15" Margin="10,5" CornerRadius="10" HasShadow="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <VerticalStackLayout>
                                <Label Text="{Binding StudentName}" FontSize="Medium" FontAttributes="Bold" />
                                <Label Text="{Binding Summary}" FontSize="Small" TextColor="Gray" />
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text="&#x3e;" VerticalOptions="Center" FontSize="Large" />
                        </Grid>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:AttendanceReportViewModel}}, Path=GoToDetailsAsync}"
                                CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout Padding="20">
                    <Label Text="Tidak ada data laporan kehadiran untuk ditampilkan." HorizontalOptions="Center" VerticalOptions="Center" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
